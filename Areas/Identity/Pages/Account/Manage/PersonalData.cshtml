@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h5 style="color:#00664d;">@ViewData["Title"]</h5>

<div class="row">
    <div class="col-md-6">
        <p style="color:#00664d;">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p style="color:#00664d;">
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-block text-white" style="background-color:#00664d;" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger btn-block text-white">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}