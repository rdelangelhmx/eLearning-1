@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column text-center">
    <li class="nav-item"><a class="nav-link button-layout mb-3 @ManageNavPages.IndexNavClass(ViewContext)"  id="profile" asp-page="./Index">Profile</a></li>
    <li class="nav-item"><a class="nav-link button-layout mb-3 @ManageNavPages.EmailNavClass(ViewContext)"  id="email" asp-page="./Email">Email</a></li>
    <li class="nav-item"><a class="nav-link button-layout  mb-3 @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item"><a  id="external-login" class="nav-link button-layout  mb-3 @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
    }
    <li class="nav-item"><a class="nav-link button-layout  mb-3 @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"  id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="nav-item"><a class="nav-link button-layout  mb-3 @ManageNavPages.PersonalDataNavClass(ViewContext)"  id="personal-data" asp-page="./PersonalData">Personal data</a></li>
</ul>

<style>
    .button-layout {
        color: white !important;
        background-color: #004d99 !important;
    }
</style>