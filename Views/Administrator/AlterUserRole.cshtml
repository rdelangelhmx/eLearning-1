@model eLearning.Models.AlterUserModel
@{
    ViewData["Title"] = "Promote User";
}


<h2 class="text-black-50 text-justify mt-3 mb-4">Promote user role</h2>

<h4 class="text-black-50 text-justify mt-3 mb-4"> Email: @Model.Email</h4>
<h4 class="text-black-50 text-justify mt-3 mb-4">Current Role: @Model.CurrentRole</h4>

@if (Model.CurrentRole == "Student")
{
    @Html.ActionLink("Promote to Tutor", "ChangeRole", "Administrator", new { email = Model.Email, role = "Tutor" }, new { @class = "btn btn-outline-secondary btn-rounded mr-2" })
   
    @Html.ActionLink("Promote to Administrator", "ChangeRole", "Administrator", new { email = Model.Email, role = "Admin" }, new { @class = "btn btn-outline-secondary btn-rounded " });
}

@if (Model.CurrentRole == "Tutor")
{
    @Html.ActionLink("Demote to Student", "ChangeRole", "Administrator", new { email = Model.Email, role = "Student" }, new { @class = "btn btn-outline-secondary btn-rounded mr-2" });
 
    @Html.ActionLink("Promote to Administrator", "ChangeRole", "Administrator", new { email = Model.Email, role = "Admin" }, new { @class = "btn btn-outline-secondary btn-rounded " });
}

@if (Model.CurrentRole == "Admin")
{
    @Html.ActionLink("Demote to Student", "ChangeRole", "Administrator", new { email = Model.Email, role = "Student" }, new { @class = "btn btn-outline-secondary btn-rounded mr-2" })
  

    
    @Html.ActionLink("Demote to Tutor", "ChangeRole", "Administrator", new { email = Model.Email, role = "Tutor" }, new { @class = "btn btn-outline-secondary btn-rounded " })
}


