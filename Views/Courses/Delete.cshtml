@model eLearning.Models.Course

@{
    ViewData["Title"] = "Delete";
}


    <h2 class ="" style="color:#b30000;">Are you sure you want to delete this course?</h2>
<hr />
<br />
<div class="container align-items-center">
    <div class="row">
        <div class="col-sm-4 ">
            <strong>@Html.DisplayNameFor(model => model.Name)</strong>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-4 ">
            <strong>@Html.DisplayNameFor(model => model.StartingDate)</strong>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(model => model.StartingDate)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-4 ">
            <strong>@Html.DisplayNameFor(model => model.EndingDate)</strong>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(model => model.EndingDate)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-4 ">
            <strong>@Html.DisplayNameFor(model => model.HasCertificate)</strong>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(model => model.HasCertificate)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-6">
            <form  asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class=" text-white btn btn-block  btn-rounded pr-2" style="background-color:#b30000;" />
                <a class="text-white btn-block btn  btn-rounded " style="background-color:#00664d;" asp-action="Index">Back to courses</a>
            </form>
        </div>
        

        

    </div>

   
</div>
    