@model eLearning.Models.Course

@{
    ViewData["Title"] = "Delete";
}


    <h2 class ="text-color">Are you sure you want to delete this course?</h2>
<hr />
<br />
<div class="container align-items-center">
    <div class="row">
        <div class="col-sm-4 ">
            <strong>@Html.DisplayNameFor(model => model.Name)</strong>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-4 ">
            <strong>@Html.DisplayNameFor(model => model.StartingDate)</strong>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(model => model.StartingDate)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-4 ">
            <strong>@Html.DisplayNameFor(model => model.EndingDate)</strong>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(model => model.EndingDate)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-4 ">
            <strong>@Html.DisplayNameFor(model => model.HasCertificate)</strong>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(model => model.HasCertificate)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-6">
            <form  asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="button-layout1 btn btn-block  btn-rounded pr-2"  />
                <a class="button-layout btn-block btn  btn-rounded " asp-action="Index">Back to courses</a>
            </form>
        </div>
        

        

    </div>

   
</div>
    <style>
        .text-color {
            color: #b30000;
        }
        .button-layout {
            color: white;
            background-color: #004d99;
        }
        .button-layout1 {
            color: white;
            background-color: #b30000;
        }
    </style>