@model eLearning.Models.Course

@{
    ViewData["Title"] = "Edit";
}


<h4 class ="text-center" style="color:#00664d;">You can modify this course</h4>
<hr />

<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form  asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group row">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="StartingDate" class="control-label"></label>
                <input asp-for="StartingDate" class="form-control" />
                <span asp-validation-for="StartingDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="EndingDate" class="control-label"></label>
                <input asp-for="EndingDate" class="form-control" />
                <span asp-validation-for="EndingDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check row">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasCertificate" /> @Html.DisplayNameFor(model => model.HasCertificate)
                </label>
            </div>
            <div class="form-group align-items-center row">
                <input type="submit" value="Save" class=" text-white btn btn-block btn-rounded pr-2" style="background-color:#00664d;" />
                <a class="text-white btn btn-block   btn-rounded " style="background-color:#00664d;" asp-action="Index">Back to courses</a>
            </div>
        </form>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
