@model eLearning.Models.Course

@{
    ViewData["Title"] = "Generate Key";
}

<h1>Generate Course Keys</h1>

<div>
    <h4>Course information</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartingDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartingDate)
        </dd>
    </dl>
</div>
<div>

    <h4>License information</h4>
    <br />
    <form asp-controller="Courses" asp-action="GenerateKey" method="post">

        <input type="hidden" id="course_id" name="course_id" value=@Model.Id>
        <input id="number" name="number" placeholder="Number of licenses" /><br /><br />
        <input type="submit" />

    </form>
</div>
