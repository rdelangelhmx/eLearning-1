<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eLearning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/c5fb304c49.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <div class="box container-fluid border-bottom ">

            <div class="push" style="margin-right:1.5%;">
                <ul style="display:inline-flex;">
                    <li style="list-style-type: none;">
                        <a class="btn btn-light btn-sm" href="mailto:cursuri@ici.ro"><i class="far fa-envelope"></i> cursuri@ici.ro</a>

                    </li>
                    <li style="list-style-type: none;">

                    </li>
                    <li style="list-style-type: none;">
                        <a class="btn btn-light btn-sm" href="tel:+40 744 777 411"><i class="fa fa-phone"></i> +40 744 777 411</a>
                    </li>
                </ul>

            </div>

        </div>

        <style>
            .box {
                display: flex;
                /*margin-left: 10px;
               margin-right: 20px;*/
                max-height: 37px;
                background-color: #E8E8E8;
            }

            .push {
                margin-left: auto;
                margin-top: 0.15%;
            }

            li {
                padding: 1.5px;
            }
        </style>


        <!--NAVBAR-->


        <nav class="navbar  navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-sm-inline-flex flex-sm-row-reverse">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">
                        <img src="~/images/logo_ICI_60x108.png" style="height: 60px;width: 108px; margin-left:-1%;" />

                    </a>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse mr-auto">

                    <ul class="navbar-nav flex-grow-1 ">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><b>HOME</b></a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="News"><b>NEWS</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="UsageGuide"><b>SUPPORT</b></a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>

    </header>
    @{
        string controller ="";
        if(ViewContext.RouteData.Values["Controller"] != null)
        {
            controller = ViewContext.RouteData.Values["Controller"].ToString();
        }
        else
        {
            controller = null;
        }

        var action = ViewContext.RouteData.Values["Action"];




        if (controller == "Home")
        {
        <div class="">
            <main role="main" class="">
               
                @RenderBody()
            </main>
        </div>
            
        }
        else {

            <div class="container">
                <main role="main" class="pb-3">
                    <br />
                    @RenderBody()
                </main>
            </div>
            }
        }




    <footer class=" footer text-muted">
        <div class="container">
            &copy; 2020 - eLearning - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> | <a asp-area="" asp-controller="Home" asp-action="TermsAndConditions">Terms and Conditions</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@{
    
}