<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eLearning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/c5fb304c49.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <div class="box container-fluid ">

            <div class="push" style="margin-right:1.5%;">
                <ul style="display:inline-flex;">
                    <li style="list-style-type: none;">
                        <a class="btn btn-light btn-sm" href="mailto:cursuri@ici.ro"><i class="far fa-envelope"></i> cursuri@ici.ro</a>

                    </li>
                    <li style="list-style-type: none;">

                    </li>
                    <li style="list-style-type: none;">
                        <a class="btn btn-light btn-sm" href="tel:+40 744 777 411"><i class="fa fa-phone"></i> +40 744 777 411</a>
                    </li>
                </ul>

            </div>
        </div>

        <style>
            .box {
                display: flex;
                /*margin-left: 10px;
               margin-right: 20px;*/
                max-height: 37px;
                background-color: #E8E8E8;
                border-radius: 3px 4px;
            }

            .push {
                margin-left: auto;
                margin-top: 0.15%;
            }

            li {
                padding: 1.5px;
            }

        </style>


        <!--NAVBAR-->


        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-sm-inline-flex flex-sm-row-reverse">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">
                        <img src="~/images/logo_ICI_60x108.png" style="height: 55px;width: 70px; margin-left:-1%;" />

                    </a>
                </div>
                <div>
                    <span class="caption text-black-50" style="font-size:large;"><strong>Learning</strong></span>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse mr-auto">

                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - eLearning - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@{
    
}