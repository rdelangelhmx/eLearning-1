@model int
@{
    ViewData["Title"] = "Configure";
}

<h3 class="text-center mb-3" style="color: #00664d;">Configure the Training section</h3>
<hr />
    <form  asp-controller="Trainings" asp-action="Configure" method="post">
        <div class= " mt-3">
            <input type="number" id="no_of_lectures" name="no_of_lectures" min="1" class="form-control" id="no_of_lectures" placeholder="Enter the number of lectures">
            <input type="hidden" value="@Model" id="course_id" name="course_id" />
            <br />
            <button type="submit" class="btn btn-block text-white" style="background-color: #00664d;">Done</button>
        </div>
    </form>

