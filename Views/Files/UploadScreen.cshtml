@model eLearning.Models.CourseLectureViewModel
@{
    ViewData["Title"] = "Upload";
}

<form method="post" enctype="multipart/form-data" asp-controller="Files" asp-action="Upload">
    
    <div class="alert alert-warning rounded">
        <h5 style="color:#00664d;"><i class="fa fa-info-circle" aria-hidden="true"></i>  File Upload Guidelines</h5>
        <h6 style="color:#00664d;">Supported filetypes:</h6>

        <div class="container" style="color:#00664d;">
            <div class="row">
                <div class="col-sm">
                    <ul>
                        <li>txt</li>
                        <li>pdf</li>
                        <li>doc</li>
                    </ul>
                </div>
                <div class="col-sm">
                    <ul>
                        <li>docx</li>
                        <li>xls</li>
                        <li>xslx</li>
                    </ul>
                </div>
                <div class="col-sm">
                    <ul>
                        <li>png</li>
                        <li>jpg</li>
                        <li>gif</li>
                    </ul>
                </div>
                <div class="col-sm">
                    <ul>
                        <li>csv</li>
                    </ul>
                </div>
            </div>
        </div>

        
    </div>
    
    <div class="form-group">
        <div class="col-md-10">
            <p style="color:#00664d;">Upload one or more files:</p>
            <input class="stylish-input" type="file" name="files" multiple />
            <input  type="hidden" name="course_id" value="@Model.Course_Id" />
            <input type="hidden"  name="lecture_id" value="@Model.Lecture_Id" />
        </div>
    </div>
    <div class="form-group" style="width:35%;">
        <div class="col-md-10">
            <input class="btn btn-block text-white" style="background-color:#00664d;" type="submit" value="Upload" />
        </div>
    </div>
</form>
<style>
    .stylish-input {
        
        border-radius: 3px 4px;
      
        color: white;
        background-color: #00664d;
    }
</style>