@model eLearning.Models.Lecture

@{
    ViewData["Title"] = "Edit";
}

<h3 class="text-center text-color" >Modify your lecture <i class="fas fa-pen"></i></h3>
<hr />
<div class="row d-flex justify-content-center text-color">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <input type="hidden" asp-for="Course_Id" />

            <input type="hidden" asp-for="Owner_ID" />

            <div class="form-group">
                <label asp-for="Lecture_Title" class="control-label">Enter the lecture title</label>
                <input asp-for="Lecture_Title" class="form-control" />
                <span asp-validation-for="Lecture_Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Text_Content" class="control-label">Enter a brief lecture summary</label>
                <input asp-for="Text_Content" class="form-control" />
                <span asp-validation-for="Text_Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Is_Zoom_Enabled" class="control-label">Will have Zoom meeting?</label>
                <input asp-for="Is_Zoom_Enabled" class="form-control" onclick="activate_zoom()" id="zoom_checkbox"/>
                <span asp-validation-for="Is_Zoom_Enabled" class="text-danger"></span>
            </div>

            <div class="form-group" id="zoom_item_1" style="display:none">
                <label asp-for="StartTime" class="control-label">Set the date and time of the meeting</label>
                <input asp-for="StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-group" id="zoom_item_2" style="display:none">
                <label asp-for="Zoom_Invite_Link" class="control-label">Set the Zoom invite link</label>
                <input asp-for="Zoom_Invite_Link" class="form-control" />
                <span asp-validation-for="Zoom_Invite_Link" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Index" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-block button-layout" />
            </div>
        </form>

    </div>
</div>

<script>

    function activate_zoom() {

        var zoom_1 = document.getElementById("zoom_item_1");
        
        var zoom_2 = document.getElementById("zoom_item_2");

        var check_box = document.getElementById("zoom_checkbox");

        if (check_box.checked == true) {
            zoom_1.style.display = "block";
            zoom_2.style.display = "block";
        } else {
            zoom_1.style.display = "none";
            zoom_2.style.display = "none";
        }
    }

</script>

<style>

    .text-color {
        color: #004d99;
    }

    .button-layout {
        color: white;
        background-color: #004d99;
    }

</style>


